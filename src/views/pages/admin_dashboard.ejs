        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script type="text/javascript" src="<%= appLocation %>/js/admin-homepage.js"></script>
    </head>
    <body>
        <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item" id='requests'>
                    <a class="nav-link active" href="#profile" role="tab" data-toggle="tab">Form 1</a>
                </li>
                <li class="nav-item" id='active1'>
                    <a class="nav-link" href="#buzz" role="tab" data-toggle="tab">Form 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#references" role="tab" data-toggle="tab">Incomplete Applications</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#processed_application" role="tab" data-toggle="tab">Processed Applications</a>
                </li>
            </ul>
            
            <div class="tab-content">
            <br>
<!--new client request content-->    
            <div role="tabpanel" class="tab-pane fade in show active" id="profile">
                <div class="card shadow mb-4">
                  <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Form 1 clients</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="request_client_table" class="table table-bordered table-hover table-striped">
                                <thead>
                                    <th style="width:10px;">Select</th>
                                    <th>Submission Date</th>
                                    <th>Reference id</th>
                                    <th>Customer Name</th>
                                    <th>Country</th>
                                    <th>Email Address</th>
                                    <th>Contact Details</th>
                                    <th>Application Status</th>
                                </thead>
                            </table>
                        </div> 
                    </div>
                </div>  
            </div>
<!--active client profiles content-->            
            <div role="tabpanel" class="tab-pane fade" id="buzz">
                <div class="card shadow mb-4">
                  <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Active client profiles Table</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="active_client_table" class="table table-bordered table-hover table-striped">
                                <thead>
                                    <th style="width:10px;">Select</th>
                                    <th>Submission Date</th>
                                    <th>Reference id</th>
                                    <th>Customer Name</th>
                                    <th>Country</th>
                                    <th>Email Address</th>
                                    <th>Contact Details</th>
                                    <th>Application Status</th>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
<!--request tab content-->            
            <div role="tabpanel" class="tab-pane fade" id="references">
                Table under development
            </div>
<!--request tab content-->            
            <div role="tabpanel" class="tab-pane fade" id="processed_application">
                Table under development
            </div>
            
        </div>
            
        </div>
        
        <div id="lead_client_modal" class="modal fade" role="dialog" style="overflow-y: hidden;">
            <div class="modal-dialog modal-lg" style="max-width:80%; width: 80%;">

                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Customer Details</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                <div class="modal-body" style="height:550px; overflow-y: scroll;">
                    <div class="container"> 
                        
                        <div class="form-group row">
                            <label for="staticEmail" style="font-size: 20px;" class="col-sm-5 col-form-label">Full name</label>
                            <div class="col-sm-1">
                                <input class="form-control" id="title" placeholder="title" type="text" readonly>
                            </div>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="full_name" placeholder="full name" readonly>
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">1.	Mobile phone number</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="mobile_number" placeholder="mobile number" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">2.	UK home address (including postcode)</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="address_line1" placeholder="Address line 1..." autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <input type="text" class="form-control" id="address_line2" placeholder="Address line 2..." autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <input type="text" class="form-control" id="town" placeholder="Town..." autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <input type="text" class="form-control" id="county" placeholder="County..." autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <input type="text" class="form-control" id="postcode" placeholder="Postcode..." autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">3.   Email address</label>
                            <div class="col-sm-5">
                                <input type="email" class="form-control" id="email_address" placeholder="email address" autocomplete="nope" readonly>
                            </div>
                        </div>
                        
                        
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">4.	Relationship status</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="relationship_status" placeholder="relationship status" autocomplete="nope" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">5.	All nationalities currently hold</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="nationalities" placeholder="nationalities" autocomplete="nope" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">6.	The date entered the UK for the first time</label>
                            <div class="col-sm-5">
                                <input data-provide="datepicker" class="form-control" id="date_UK_entry"  placeholder="dd/mm/yyyy" readonly autocomplete="nope"> 
                            </div>
                        </div>

                        <div class="form-group row" id="" >
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <textarea class="form-control" id="conviction_text_area" rows="3" autocomplete="nope" placeholder="any convictions" readonly></textarea>
                            </div>
                        </div>
                    
                        <div class="form-group row">
                            <div class="col-sm-5 offset-md-5 offset-lg-5">
                                <textarea class="form-control" id="visa_refusals_textarea" rows="3" autocomplete="nope" placeholder="any visa refusals" readonly></textarea>
                            </div>
                        </div>
                    
                    
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-5 col-form-label">9.	Details of any public funds you or your family have received in the UK</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="details_public_funds" placeholder="Any public funds" autocomplete="nope" readonly>
                            </div>
                        </div>
                    
                    
                    </div>

                    <br><br>    
                    
                </div>
              </div>
            </div>
        </div>
    </body>
</html>
