<html>
    <head>
        
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.28.12/sweetalert2.all.js"></script>
        
        <title>Login Page</title>
   
	<!--Bootsrap 4 CDN-->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"  crossorigin="anonymous">
    
    <!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" crossorigin="anonymous">

	<!--Custom styles-->
	<link rel="stylesheet" type="text/css" href="<%= appLocation %>/css/Style.css">
    <script src="<%= appLocation %>/js/login.js"></script>


    </head>
    <body>
        
        <div class="container">
            <div id="first_container" style="text-align:right;">
                <img style="float:right;" src="<%= appLocation %>/images/icon.png"><br>
                <h2 id="header_1" style="color: #595959;" align="right" class="display-5">NEWFIELDS</h2>
                <hr align="right" style="width:100px; border: 1px groove #ffff1a;">
                <a href="https://www.newfieldslaw.com/" target="_blank" style="font-size: 15px;">www.newfieldslaw.com</a>
            </div>
            <br><br>
            <div class="d-flex justify-content-center">
                <div class="card shadow mb-4" style="min-height:350px;height:auto;">
                    <div class="card-header">
                        <h3 id="label_header">Sign In</h3>
                        <div class="d-flex justify-content-end social_icon">
                            <a  href="https://www.newfieldslaw.com/" target="_blank">
                                <span ><i class="fab fa-facebook-square"></i></span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body" >
                        <form id="user-credentials-form">
                            
                            <div id="signIN" style="display:none;">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="email" placeholder="email">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" id="password" placeholder="password">
                                </div>
                                
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn float-right login_btn">
                                </div>
                            </div>
                            <div id="register" style="display:none;">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-address-card"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="register_name" placeholder="name">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" id="register_email" placeholder="email address">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" id="register_password" placeholder="password">
                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" class="form-control" id="register_confirmpassword" placeholder="confirm password">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Register" id="register_button" class="btn float-right login_btn">
                                </div>
                            </div>
                            <div id="forget_password" style="display:none;">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" id="forgot_password_email" class="form-control" placeholder="email address">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Request" id="forget_button" class="btn float-right login_btn">
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links" >
                            <div id="signup_option" style="display:none;">
                                Don't have an account?<a style="color: #1a75ff;  cursor: pointer;" onclick="register(0);">Sign Up</a>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center links" >
                            <div id="signin_option" style="display:none;">
                                Want to ?<a style="color: #1a75ff; cursor: pointer;" onclick="register(1);">Sign In</a>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-center">
                            <div id="forgetpassword_option" style="display:none;">
                            <a style="color: #1a75ff; cursor: pointer;" onclick="register(2);">Forgot your password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="overlay1" style="display:none" class="overlay">
                <div class="overlay-content">
                    <label id="overlay_label_text" style="font-size: 25px;"></label><br>
                    <img id="img" style="display:none" src="<%= appLocation %>/images/Dual Ring.gif" />
                </div>
            </div>

        </div>
    </body>
</html>
